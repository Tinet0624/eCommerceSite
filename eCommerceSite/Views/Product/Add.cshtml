@model Product
@{
    ViewData["Title"] = "Add Product";
}

<div class="card">
    <div class="card-header">
        <h1>Add Product</h1>
    </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label for="product-title" asp-for="Title"></label>
                    <input class="form-control" id="product-title" asp-for="Title" />
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label for="product-price" asp-for="Price"></label>
                    <input class="form-control" id="product-price" asp-for="Price" />
                    <span asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label for="product-category" asp-for="Category"></label>
                    <input class="form-control" id="product-category" asp-for="Category" />
                    <span asp-validation-for="Category"></span>
                </div>
                    <input type="submit" class="btn btn-success" />
            </form>
        </div>
    </div>
